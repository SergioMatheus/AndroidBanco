<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imagemFilme"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo do Filme"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/localFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local em exibição"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/horarioDoFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario do Filme"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/duracaoFilme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duração do Filme"
            android:textSize="20dp" />
    </LinearLayout>
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/faixaetaria"
            android:layout_width="50dp"
            android:layout_height="50dp"

        />

</LinearLayout>